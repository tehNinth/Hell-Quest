  DataToggle.Caption := '<';
 end else begin
  DataPanel.Visible := true;
  DataTitle.Visible := true;
  DataSocket.Visible := true;
  DataCharacterID.Visible := true;
  DataToggle.Caption := '>';
 end;
end;

